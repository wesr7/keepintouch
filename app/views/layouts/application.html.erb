<!DOCTYPE html>
<html>
<head>
  <title>Wes Rodgers | Full Stack Developer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Pompiere' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <nav class="navbar navbar-default navbar-fixed-top navbar-inverse navbar-lg">
          <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="" name="" id="" class="" alt="" title="">wes rodgers</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                  <li><a class="" href="#about">About</a></li>
                  <li><a class="" href="#portfolio">Portfolio</a></li>
                  <li><a class="" href="#contact">Contact</a></li>
                  <li><a href="#blog">Blog</a></li>
                </ul>
          </div><!--/.nav-collapse -->
      </div>
    </nav>
</div>
<div class="hdr-wrapper hdr-image">
  <div class="container text-center my-title">
    <div class="row">
      <div class="col-xs-12">
        <!-- <h1>Full Stack Developer</h1> -->
      </div>
    </div>
  </div>

</div>
<div class="main-content" >
  <div class="container-fluid text-center">
    <div class="row technologies">
      <div class="col-xs-12">
        <img src="<%=asset_path 'wes_rodgers_profile.jpg' %>" alt="" class="about-me-image ">
        <h1>Wes Rodgers</h1>
        <h2>Front End Developer w/ Full Stack Developer Chops</h2>
      </div>
    </div>
    <div class="row overlay">
      <div class="col-xs-12">
      </div>
    </div>
    <div class="row">
      <img class="about-me" src="<%=asset_path 'selah-beach.jpg' %>" alt="">
      <div class="col-xs-12 about-me-wrapper">
        <h1>Husband, Father, Developer, with a passion for javascript and music.</h1>
      </div>
    </div>
    <div class="row overlay">
      <div class="col-xs-12">
      </div>
    </div>
    <div class="row portfolio">
      <div class="col-xs-12">
        <h1>portfolio</h1>
      </div>
    </div>
    <div class="row overlay">
      <div class="col-xs-12">
      </div>
    </div>
  </div>



    <%= yield %>
   <div class="container" style="background-color: black; width: 100%; height: 50px;" >
    <div class="row">
      <div class="col-xs-12">
        <p>footer</p>
      </div>
    </div>
  </div>
</div>







</body>

<script>

$(document).on("scroll", function(){
 if($(document).scrollTop()>=$('.hdr-image').height()-100){
  $('.navbar').removeClass('navbar-lg');
  $('.navbar').addClass('navbar-white');
 } else {
  $('.navbar').removeClass('navbar-white');
  $('.navbar').addClass('navbar-lg');
 }
});

function setTop(){
      var newTop = $('.hdr-image').height();
    $('.main-content').css('top', newTop);
    $('.main-content').css('height', newTop);
}

$(window).load(function(){
    setTop();

});

$(window).resize(function(){
  setTop();

});
console.log($('.technologies').position().top);
</script>
</html>
